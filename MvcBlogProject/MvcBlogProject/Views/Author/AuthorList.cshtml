@model IEnumerable<EntityLayer.Concrate.Author>
@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                @foreach (var item in Model)
                {<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                        <div class="card bg-light">
                            <div class="card-header text-muted border-bottom-0">
                                @item.AuthorTitle
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="lead"><b>@item.AuthorName</b></h2>
                                        <p class="text-muted text-sm"><b>Hakkında: </b> @item.AuthorShotAbout</p>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-mail-bulk"></i></span> E-Mail:  @item.AuthorMail </li>
                                            <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>Telefon: @item.AuthorPhone </li>
                                        </ul>
                                    </div>
                                    <div class="col-5 text-center">
                                        <img width="300" height="300" src="@item.AuthorImage" alt="" class="img-circle img-fluid">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="#" class="btn btn-sm bg-teal">
                                        <i class="fas fa-comments"></i>
                                    </a>
                                    <a href="#" class="btn btn-sm btn-primary">
                                        <i class="fas fa-user"></i> View Profile
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>}
            </div>
            <a href="/Author/AddAuthor" class="btn btn-primary  ">Yeni Yazar Girişi</a>
            <br />
            <br />
        </div>


    </div>
</section>

